  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "ssh2": "^1.16.0",
    "ssh-config": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ssh2": "^1.15.0",
    "tsup": "^8.0.0",
